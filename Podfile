platform :ios, '9.0'
use_frameworks!

def shared_pods
    use_frameworks!

    pod 'Alamofire', '~> 4.4.0'
    pod 'AlamofireNetworkActivityIndicator', '~> 2.1.0'
    pod 'RxSwift', '~> 3.4.0'
    pod 'RxCocoa', '~> 3.4.0'
    pod 'RxDataSources', '~> 1.0.3'
    pod 'R.swift', '~> 3.2.0'
    pod 'Unbox', '~> 2.3.0'
    pod 'Wrap', '~> 2.1.0'
    pod 'Result', '~> 3.2.2'
    pod 'SwiftDate', '~> 4.1.1'
    pod 'Whisper', '~> 4.0.0'
    pod 'Kingfisher', '~> 3.3.4'
end

target 'Sportivity' do
    shared_pods
end

